<div class="container">
  <h1 class="text-primary text-center mt-5">Longest Word</h1>
  <p class="lead text-center">Find the longest word possible to maximize the amount of points you gain!</p>

  <div class="d-flex justify-content-center mt-5">
    <% @letters.each do |letter| %>
      <div class="btn btn-primary m-3 btn-lg"><%= letter %></div>
    <% end %>
  </div>

  <div class="d-flex justify-content-center mt-5">
    <%= form_with(url: '/score', method: 'post', data: { turbo: false }) do |form| %>
      <div class="input-group">
        <%= form.text_field :word, class: 'form-control', placeholder: 'Your word here...', autocomplete: 'off' %>
        <button class="btn btn-primary" type="submit">Let's see</button>
      </div>
      <%= form.hidden_field :letters, value: @letters.join(',') %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <% end %>
  </div>
</div>
